<%= flash_messages %>

<h1>Listing Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
            <%= link_to 'Show', admin_user_path(user) %> |
            <%= link_to_toggle_user_lock(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
